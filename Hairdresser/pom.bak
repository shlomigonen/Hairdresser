	  		<groupId>org.apache.tomcat.maven</groupId>
          	<artifactId>tomcat7-maven-plugin</artifactId>
          	<version>2.0</version>
	  	<configuration> 
	  		<url>http://localhost:8080/manager/html</url>
	  		<server>myserver</server>
	  		<path>/Hairdresser</path>
	  	</configuration> 
	  </plugin>       
    </plugins>
